{
  "include": [
    "src/custom.d.ts",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "node_modules/@types/node/module.d.ts",
  ],
  "compilerOptions": {
    "jsx": "react-jsx",
    "baseUrl": ".",
    "declaration": true,
    "declarationMap": true,
    "strictNullChecks": false,
    "target": "es2015",
    "strict": false,
    "moduleResolution": "node",
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ]
}
